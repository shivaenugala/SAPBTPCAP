{
  "name": "e_Learning",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-elearningapp": "cds watch --open elearningapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy e_Learning --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "devDependencies": {
    "cds-plugin-ui5": "^0.13.0",
    "@sap/cds-dk": "^9",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "sapux": [
    "app/elearningapp"
  ]
}
